<h1>Listing campaigns</h1>

<table>
  <tr>
    <th>Title</th>
    <th>From name</th>
    <th>From email</th>
    <th>Replyto mail</th>
    <th>Datesent</th>
    <th>Tags</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @campaigns.each do |campaign| %>
  <tr>
    <td><%= campaign.title %></td>
    <td><%= campaign.from_name %></td>
    <td><%= campaign.from_email %></td>
    <td><%= campaign.replyto_mail %></td>
    <td><%= campaign.datesent %></td>
    <td><%= campaign.tags %></td>
    <td><%= campaign.user_id %></td>
    <td><%= link_to 'Show', campaign %></td>
    <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
    <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

